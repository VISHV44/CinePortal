@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-8 col-sm-12">
            <div class="card shadow-lg p-5 border-0 rounded-4 bg-light">
                <h3 class="text-center text-primary fw-bold mb-4">
                    <i class="bi bi-building me-2"></i> Details of @Model.Name
                </h3>

                <!-- Logo -->
                <div class="text-center mb-4">
                    <img id="LogoPreview"
                         src="@Model.Logo"
                         class="border rounded-circle shadow"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Cinema Logo" />
                </div>

                <!-- Readonly fields -->
                <div class="mb-3">
                    <label class="fw-semibold">Logo URL</label>
                    <input class="form-control" value="@Model.Logo" readonly />
                </div>
                <div class="mb-3">
                    <label class="fw-semibold">Name</label>
                    <input class="form-control" value="@Model.Name" readonly />
                </div>
                <div class="mb-4">
                    <label class="fw-semibold">Description</label>
                    <textarea class="form-control" rows="4" readonly>@Model.Description</textarea>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
