@model Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-8 col-sm-12">
            <div class="card shadow-lg p-5 border-0 rounded-4 bg-light">
                <h3 class="text-center mb-4 text-primary fw-bold">
                    <i class="bi bi-building me-2"></i> Edit Production company
                </h3>

                <form asp-action="Edit" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Logo Preview -->
                    <div class="text-center mb-4">
                        <img id="CinemaLogoPreview"
                             src="@Model.Logo"
                             class="border rounded-circle shadow"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             alt="Logo Preview" />
                    </div>

                    <!-- Logo URL -->
                    <div class="form-group mb-4">
                        <label asp-for="Logo" class="form-label fw-semibold">Logo URL</label>
                        <input asp-for="Logo" class="form-control" placeholder="Update logo URL" required />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <!-- Company Name -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">Company Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Update name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Update description" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-success rounded-pill px-4">
                            <i class="bi bi-save"></i> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const preview = document.getElementById('CinemaLogoPreview');
            const input = $('#Logo');

            preview.src = input.val();

            input.on("input", function () {
                preview.src = $(this).val();
            });
        });
    </script>
}
