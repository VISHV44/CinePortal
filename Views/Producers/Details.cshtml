@model Producer

@{
    ViewData["Title"] = "Producer Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-8 col-sm-12">
            <div class="card shadow-lg p-5 border-0 rounded-4 bg-light">
                <h3 class="text-center text-primary fw-bold mb-4">
                    <i class="bi bi-person-badge me-2"></i> Details of @Model.FullName
                </h3>

                <!-- Profile Picture -->
                <div class="text-center mb-4">
                    <img id="ProfilePicturePreview"
                         src="@Model.ProfilePictureURL"
                         class="border rounded-circle shadow"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Producer Picture" />
                </div>

                <!-- Readonly fields -->
                <div class="mb-3">
                    <label class="fw-semibold">Profile Picture URL</label>
                    <input class="form-control" value="@Model.ProfilePictureURL" readonly />
                </div>
                <div class="mb-3">
                    <label class="fw-semibold">Full Name</label>
                    <input class="form-control" value="@Model.FullName" readonly />
                </div>
                <div class="mb-4">
                    <label class="fw-semibold">Biography</label>
                    <textarea class="form-control" rows="4" readonly>@Model.Bio</textarea>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
